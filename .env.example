# MongoDB
# Use a non-test database name here (this creates a new database on first write)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<database-name>?retryWrites=true&w=majority
# Optional: force a db name even if the URI omits it
MONGODB_DB=attendance_app

# Cloudinary (image storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=attendance-app

# Admin signup invite code (required for admin role)
ADMIN_INVITE_CODE=

# Reverse geocoding (optional)
# REVERSE_GEOCODE_PROVIDER=nominatim | mapbox | google
REVERSE_GEOCODE_PROVIDER=nominatim
REVERSE_GEOCODE_USER_AGENT=attendance-app
REVERSE_GEOCODE_LANGUAGE=en
MAPBOX_TOKEN=
GOOGLE_MAPS_KEY=

# Email (password reset)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=

# Frontend app base URL for reset links
APP_BASE_URL=http://localhost:5173
